<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
   	    android:id="@+id/mustsongTitleBar"
   	    android:layout_width="match_parent"
   	    android:layout_height="60dp"
   	    android:background="#2EB8E6"
   	    android:layout_alignParentTop="true" />
    
    <TextView
        android:id="@+id/mustsong_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mustsongTitleBar"
        android:layout_alignTop="@+id/mustsongTitleBar"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textSize="45sp" />

    <ListView
        android:id="@+id/listView_must"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_below="@id/mustsongTitleBar"
        android:layout_centerHorizontal="true" >

    </ListView>
    

</RelativeLayout>
