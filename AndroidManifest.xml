<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.majia.alarmalarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> 
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.FirstActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.SecondActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.AboutActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.EarlySongActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.MustSongActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.LocalSongEarlyActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.majia.alarmalarm.LocalSongMustActivity" >
        </activity>
    </application>

</manifest>
